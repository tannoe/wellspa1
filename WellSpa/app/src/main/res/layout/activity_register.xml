<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.register"
    android:background="@drawable/gradient_2">

    <TextView
        android:id="@+id/head_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Account"
        android:textSize="40dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

    <RelativeLayout
        android:layout_below="@id/head_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameReg"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Username"
            android:inputType="text"
            android:textSize="17dp"
            android:textStyle="bold"
            />


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameReg"
            android:id="@+id/passwordReg"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:hint="Password"
            android:textSize="17dp"
            android:textStyle="bold"
            android:inputType="text"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordReg"
            android:id="@+id/phoneReg"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:hint="Phone number"
            android:textSize="17dp"
            android:textStyle="bold"
            android:inputType="number"
            />


        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneReg"
            android:layout_marginStart="7dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textSize="18sp"
            android:background="@drawable/button"
            android:textColor="@color/colorAccent"/>

    </RelativeLayout>

</RelativeLayout>